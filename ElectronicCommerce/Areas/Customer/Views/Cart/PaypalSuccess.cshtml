@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Success</title>
    <link rel="stylesheet" href="~/customer/style/success-page.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

    <!-- SCRIPT JS-->
    <script src="http://code.jquery.com/jquery-2.2.1.min.js"></script>
</head>
<body>
    <header>
        <div class="header__wrapper">
            <div style="display: flex;">
                <div class="header__logo">
                    <img src="~/customer/img/hnjcart.svg" alt="" class="logo" width="120" height="36">
                </div>
                <div class="header__wrapper-title">
                    <span><i class="fa-sharp fa-solid fa-lock" style="font-size: 20px; margin-left: 4px;"></i></span>
                    <span style="font-size:12px;">THANH TOÁN AN TOÀN</span>
                </div>
            </div>
            <div class="header__continue-wrapper">
                <a href="http://localhost:5000" class="header__continue-sale">
                    TIẾP TỤC MUA SẮM
                    <span></span>
                </a>
            </div>
        </div>
    </header>
    <div class="cart__container">
        <div class="cart__wrapper">
            <div class="process__wrapper">
                <span>Giỏ hàng</span>
                <span>Đặt hàng</span>
                <span>Trả tiền</span>
                <span style="color:#333;font-weight:600;">Hoàn thành đơn hàng</span>
            </div>

            <div class="success-container">
                <div class="success-wrapper">
                    <div class="success-notify">
                        <div class="success-animation">
                            <svg class="checkmark" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 52 52"><circle class="checkmark__circle" cx="26" cy="26" r="25" fill="none" /><path class="checkmark__check" fill="none" d="M14.1 27.2l7.1 7.2 16.7-16.8" /></svg>
                        </div>
                        <h2>Thanh toán thành công</h2>
                        <p>Bạn đã thực hiện thanh toán thành công qua phương thức thanh toán PayPal</p>
                        <div class="receipt-paypal-info">
                            <div class="receipt-paypal-title">
                                <div class="receipt-paypal-left-corner-title">
                                    <img width="40" height="40" src="data:image/png;base64," />
                                    <div style="margin-left:6px;">
                                        <p>Thông tin chi tiết về hoá đơn thanh toán</p>
                                        <span id="date-checkout"></span>
                                    </div>
                                </div>
                                <span id="total-checkout">- $@ViewBag.totalPay.ToString("#.0")</span>
                            </div>
                            <div class="receipt-paypal-detail__wrapper">
                            <table>
                                <tr>
                                    <td><b>Hình thức thanh toán</b></td>
                                    <td></td>
                                    <td><b>Đơn vị thụ hưởng</b></td>
                                </tr>
                                <tr>
                                    <td>Số tiền</td>
                                    <td style="width: 240px !important;text-align:center;">$@ViewBag.totalPay.ToString("#.0")</td>
                                    <td>
                                        Doanh nghiệp HNJ
                                        <br />
                                        <a href="#">@ViewBag.mailReciever</a>
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        <b>Gửi đến</b>
                                    </td>
                                    <td></td>
                                    <td><b>Chi tiết đơn hàng</b></td>
                                </tr>
                                <tr>
                                    <td>
                                        @ViewBag.shipTo
                                    </td>
                                    <td></td>
                                    <td style="position:relative;">
                                        @{var total=0;}
                                        @foreach(var item in ViewBag.carts) {
                                            <div style="margin-bottom:4px;">
                                                @item.name x @item.quantity
                                                <span style="position:absolute; right:0;">$@item.price.ToString("#.0") $</span>
                                            </div>
                                            { total += item.price * item.quantity; }
                                        }
                                        <hr />
                                        <span><b>Tổng cộng</b></span>
                                        <span style="position: absolute; right: 0;">$@total.ToString("#.0")</span>
                                    </td>
                                </tr>
                                <tr>
                                    <td><b>Mã giao dịch</b></td>
                                </tr>
                                <tr>
                                    <td>@ViewBag.transactionId</td>
                                    <td></td>
                                    <td style="position:relative;">
                                        <a style="position:absolute; text-decoration:none; right:0;" href="#"><i class="fa-solid fa-print"></i>  In hoá đơn</a>
                                    </td>
                                </tr>
                            </table>
                        </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>

<script>
    var options = { weekday: 'long', year: 'numeric', month: 'long', day: 'numeric' };
    const d = new Date();
    document.getElementById("date-checkout").innerHTML = d.toLocaleDateString("vi-VN", options);
</script>
