                <div class="w-14 flex-shrink-0" aria-hidden="true">
                    <!-- Dummy element to force sidebar to shrink to fit close icon -->
                </div>
            </div>
        </div>

        <!-- Static sidebar for desktop -->
        <!-- partial -->
        <!-- partial:partials/_sidebar.html -->

        @await Html.PartialAsync("_SideNavPartialView.cshtml")

        <div class="flex flex-1 flex-col lg:pl-64">
            <div class="order-wrapper" style="margin:0 30px;">
                <div class="title-header" style="font-size:28px; text-align:center;padding-top:40px;font-weight:bolder;">
                    ĐƠN HÀNG CỦA TÔI
                </div>

                <div style="display:flex;justify-content:space-between;">
                    <ul id="hori-nav" style="margin-top:20px;font-weight:500;">
                        <li><span onclick="filterOrder('all');">Tất cả đơn hàng</span></li>
                        <li><span onclick="filterOrder('unpaid');">Chưa thanh toán</span></li>
                        <li><span onclick="filterOrder('process');">Xử lý</span></li>
                        <li><span onclick="filterOrder('shipped');">Đã vận chuyển</span></li>
                        <li><span>Đánh giá</span></li>
                        <li><span onclick="filterOrder('returned');">Trả lại</span></li>
                    </ul>
                    <a style="margin-top:40px;" asp-area="customer" asp-controller="customer" asp-action="order"><i class="fa fa-refresh"></i> Làm mới</a>
                </div>
                <script>
                    function filterOrder(action) {
                        if (action == 'all') {
                            findAllOrder();
                        } else if (action == 'unpaid') {
                            $(".order-record").each(function () {
                                console.log($(this).attr('data-payment'));
                                if ($(this).attr('data-payment') == 'Chưa thanh toán') {
                                    $(this).attr("style", "display:table-row !important;");
                                }
                                else
                                {
                                    $(this).attr("style", "display:none !important;");
                                }
                            });
                        } else if (action == 'process') {
                            $(".order-record").each(function () {
                                if ($(this).attr('data-status') == 'Đã xác nhận') {
                                    $(this).attr("style", "display:table-row !important;");
                                }
                                else
                                {
                                    $(this).attr("style", "display:none !important;");
                                }
                            });
                        } else if (action == 'shipped') {
                            $(".order-record").each(function () {
                                if ($(this).attr('data-status') == 'Đang giao hàng') {
                                    $(this).attr("style", "display:table-row !important;");
                                }
                                else {
                                    $(this).attr("style", "display:none !important;");
                                }
                            });
                        } else if (action == 'returned') {

                        } else {

                        }
                    }

                    function findAllOrder() {
                        $(".order-record").each(function () {
                            $(this).attr("style", "display:table-row;");
                        });
                    }

                    function cancelOrder(id, el) {
                        if (!confirm("Bạn có chắc chắn sẽ huỷ đơn hàng này ?")) {
                            return;
                        }
                        $(el).addClass("disable");
                        $(el).prop("onclick", null).off("click");
                        console.log("abc" + id.trim() + "xyz");
                        $.ajax({
                            type: 'POST',
                            data: {
                                id: id
                            },
                            url: '/customer/customer/Cancel',
                            success: function (result) {

                                console.log(result);
                                if (result.message == 'ok') {
                                    alert('Huỷ đơn thành công');
                                    $('#state-'+id.trim()).text('Đã huỷ đơn');
                                }
                                else if (result.message == 'sent') {
                                    alert('Đã gửi yêu cầu huỷ đơn chờ cửa hàng xác nhận');
                                    $('#state-' + id.trim()).text('Đã gửi yêu cầu huỷ đơn');
                                }
                                else if (result.message == 'unable') {
                                    alert('Đơn hàng đang giao không thể yêu cầu huỷ đơn');
                                }
                            }
                        });
                    }


                </script>
                <div class="order-list__wrapper">
                    <table style="width: 100%; border-collapse: separate; border-spacing: 0 10px;">
                        <thead>
                            <tr>
                                <th scope="col"></th>
                                <th scope="col" style="text-align:center;">Mã đơn</th>
                                <th scope="col" style="text-align:center;">sản phẩm</th>
                                <th scope="col">Giá thực</th>
                                <th scope="col">Tình trạng thanh toán</th>
                                <th scope="col">Trạng thái</th>
                                <th scope="col">Thao tác đặt hàng</th>
                                <th scope="col">Ngày tạo</th>
                            </tr>
                        </thead>
                        <tfoot>
                            <tr>
                                <td colspan="3">Dữ liệu được cập nhật mỗi 15 phút </td>
                            </tr>
                        </tfoot>
                        <tbody>
                            @if (ViewBag.orders != null)
                            {
                                @foreach (var item in ViewBag.orders)
                                {
                                    <tr class="order-record" data-status="@item.OrderState" data-payment="@item.PayType">
                                        <td><a asp-area="customer" asp-controller="customer" asp-action="review" asp-route-id="@item.Id"><i class="fa fa-comment"></i></a></td>
                                        <td style="text-align:center;">
                                            <span>@item.Id</span>
                                        </td>
                                        <td style="text-align:center;">

                                            @foreach (var order_detail in item.OrderDetails)
                                            {
                                                <div class="product-info">
                                                    <span class="product_name">@order_detail.ProductDetail.Product.Name</span>
                                                    <img style="border:1px solid #E5E5E5;display:block;margin-left:auto;margin-right:auto;" src="~/admin/images/products/@order_detail.ProductDetail.Product.Image" width="60" height="75" />
                                                    <span class="product_quantity">@order_detail.Quantity</span> sản phẩm
                                                </div>
                                            }
                                        </td>
                                        <td>
                                            <span class="product_price">@item.TotalPay $<span>
                                        <td>
                                            <span class="payment_status">@item.PayType</span>
                                        </td>
                                        <td>
                                            <span class="order_status" id="state-@item.Id.Trim()">@item.OrderState</span>
                                        </td>
                                        <td>

                                            @if (item.OrderState == "Chờ xác nhận" || item.OrderState == "Đã xác nhận" || item.OrderState == "Đang giao hàng")
                                            {
                                                <a class="btn btn-cancel" onclick="cancelOrder('@item.Id',this);" href="javascript:void(0);">Huỷ đặt hàng</a>
                                            }
                                            else
                                            {
                                                <a class="btn btn-cancel disable" onclick="cancelOrder('@item.Id',this);" href="javascript:void(0);">Huỷ đặt hàng</a>
                                            }

                                        </td>
                                        <td>
                                            <span>@item.DateCreated.ToString("dd/MM/yyyy")</span>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

</body>

